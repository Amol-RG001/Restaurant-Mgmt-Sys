@model IEnumerable<FoodRecipe.Models.AddFoodRecipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Add Recipe</h1>
<br/>
<p>
    <a class="btn btn-sm btn-success" asp-action="Create">Create New</a>
</p>
<br/>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="table-info"> 
            
            <th>
                @Html.DisplayNameFor(model => model.FoodRecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodIngredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodMakingStep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodSubCategory)
            </th>
            
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.FoodRecipeName)
            </td>
            <td>
                    @Html.Raw(item.FoodIngredient)
            </td>
            <td>
                    @Html.Raw(item.FoodMakingStep) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodSubCategory.FoodSubCategoryName)
            </td>
            
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.FoodRecipeId">Edit</a> 
                    <a class="btn btn-sm btn-warning"  asp-action="Details" asp-route-id="@item.FoodRecipeId">Details</a> 
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.FoodRecipeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
