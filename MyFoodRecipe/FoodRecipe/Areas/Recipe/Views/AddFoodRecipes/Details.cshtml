@model FoodRecipe.Models.AddFoodRecipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AddFoodRecipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FoodRecipeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FoodRecipeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FoodIngredient)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.FoodIngredient)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FoodMakingStep)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.FoodMakingStep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FoodSubCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FoodSubCategory.FoodSubCategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
           <img src="~/img/@Model.Image" width="200"alt=""/>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.FoodRecipeId">Edit</a> 
    <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
</div>
