@model IEnumerable<FoodRecipe.Models.AddFoodRecipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Food Details</h1>


<div class="card-columns">
    @foreach (var fooditem in Model)
    {
        <div class="card border border-danger">
            <div class="card-header font-weight-bold">
                @fooditem.FoodRecipeId
            </div>
            <div class="card-body ">
                @Html.DisplayNameFor(modelItem => fooditem.FoodRecipeName) : @fooditem.FoodRecipeName
                <br/>
                @Html.DisplayNameFor(modelItem => fooditem.FoodIngredient) : @fooditem.FoodIngredient
                <br />
               
                @Html.DisplayNameFor(modelItem => fooditem.FoodMakingStep) : @fooditem.FoodMakingStep
                <br />

            </div>
            <div class="card-footer">
        
            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@fooditem.FoodRecipeId">Details</a>
      
        </div>
        </div>
    }
</div>
