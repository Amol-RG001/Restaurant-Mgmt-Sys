@{
}
<h1> Recipes</h1>

<div class="row">
    <div class="col-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FoodRecipeId" class="control-label"></label>
                <select asp-for="FoodRecipeId" asp-items="ViewBag.RecipesListCollection" class="form-control"></select>
                <span asp-validation-for="FoodRecipeId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Show Recipe</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
