@{
}
<h1> By Sub Category</h1>

<div class="row">
    <div class="col-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FoodSubCategoryId" class="control-label"></label>
                <select asp-for="FoodSubCategoryId" asp-items="ViewBag.CategoriesCollection" class="form-control"></select>
                <span asp-validation-for="FoodSubCategoryId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Show Food Items</button>
        </form>
    </div>
</div>



@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}