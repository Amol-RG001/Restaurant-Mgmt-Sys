@model IEnumerable<RestroMgmtSystem.Models.PaymentType>

@{
    ViewData["Title"] = "Index";
}

<h1>Payment</h1>

<p>
    <a class="btn btn-sm btn-warning" asp-action="Create">Create New</a>
</p>
<table class="table" style="background-color:#FFEBAD">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.PaymentTypeId">Edit</a> |*@
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.PaymentTypeId">Details</a> &nbsp;
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PaymentTypeId">Delete</a>&nbsp;&nbsp;

                 <!--created button for confirm customer's order-->
                    <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModal">Confirm Order</button>

                 <!--my model-->
                  <div class="modal" id="myModal">
                      <div class="modal-dialog">
                          <div class="modal-content">

                                <!--model head-->
                                <div class="modal-header" style="background-color:#E94560">
                                    <h5 class="modal-title" style="color:#F9F9F9">Success!</h5>
                                    <button type="button" class="close" data-dismiss="modal">&otimes;</button>
                                </div>
                                <!--model body-->
                                <div class="modal-body">
                                    <h5>Order Confirmed!<br />Thank you for Patience..</h5>
                                </div>
                                <!--model footer-->
                                <div class="modal-footer" style="background-color:#EEF2E6">
                                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                                </div>
                          </div>
                      </div>
                  </div>  
                   
            </td>
        </tr>
}
    </tbody>
</table>
