<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Web App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/img/small-leaf.png" /> &nbsp;
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index"> Restro Green</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Manage" asp-controller="Menus" asp-action="Index">Food Menu</a>
                        </li>
                       
                        
                        <!--Dropdown Menu for User-->
                        <li class="nav-item dropdown"> 
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#EEF1FF">User Menu</a>
                            <div class="dropdown-menu" style="background-color:#FCF8E8">
                                <a class="dropdown-item" 
                                    asp-area="Manage" asp-controller="Customers" asp-action="Index">Customers</a>
                                <a class="dropdown-item" 
                                    asp-area="Manage" asp-controller="Menus" asp-action="Index">Menu</a>
                                <a class="dropdown-item"
                                    asp-area="Manage" asp-controller="Items" asp-action="Index">Items</a>
                                <a class="dropdown-item" 
                                    asp-area="Manage" asp-controller="ItemCategories" asp-action="Index">Item Categories</a>
                                <a class="dropdown-item" 
                                    asp-area="Manage" asp-controller="Orders" asp-action="Index">Orders</a>
                                <a class="dropdown-item" 
                                    asp-area="Manage" asp-controller="OrderDetails" asp-action="Index">Order Details</a>
                                <a class="dropdown-item" 
                                    asp-area="Manage" asp-controller="PaymentTypes" asp-action="Index">Payment Type</a>

                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   <hr />

  
    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2022 - by Amol Gahane - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
